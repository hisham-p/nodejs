<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $(".container").on('click', '.remove', function () {
            $.ajax({
                type: "POST",
                url: '/remove/' + $(this).data("id"),
                success: window.location.replace("/")
            })
        })

        $(".update").click(function (key) {
            let olddata = $(this).val();
            $(".container").on('keydown', ".update", function (key) {
                if (key.which === 13) {
                    let dbdata = $(this).val();
                    $.ajax({
                        type: "POST",
                        url: "/update/" + $(this).data("id") + "/" + olddata + "/" + dbdata,
                        success: window.location.replace("/")
                    })
                  
                }
            })
        })
        $(".complete").click(function(){
            let id = this.id;
            // alert(id);
          $(this).attr("checked","checked")
          if($(this).prop('checked') === true){
              $(`#${id}.update`).attr("style","text-decoration:line-through");
              
          }else{
            $(`#${id}.update`).removeAttr("style");
          }
        })
    })
</script>

